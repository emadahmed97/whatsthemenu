mixin reviewItemForm(menuItem)
  form(action=`/menuitems/reviews/${menuItem._id}` method="POST")
    textarea(name="text" placeholder=`Leave a review for ${menuItem.name}`)
    .reviewer__meta
      .reviewer__stars
        .rating-stars
          label
            input(type='radio', id='star5' name='rating', value='5', title='5 stars')
            |  5
          |
          label
            input(type='radio', name='rating', value='4', title='4 stars')
            |  4
          |
          label
            input(type='radio', name='rating', value='3', title='3 stars')
            |  3
          |
          label
            input(type='radio', name='rating', value='2', title='2 stars')
            |  2
          |
          label
            input(type='radio', name='rating', value='1', title='1 star')
            |  1
      .submitbutton
        input.button(type="submit" value="Submit Review â†’")
